<Window x:Class="W11WPFCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W11WPFCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="518" Width="462">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/marlon-medau-TFg35jn95OU-unsplash.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="BtnAdd" Content="증가" HorizontalAlignment="Center" Margin="0,273,0,0" VerticalAlignment="Top" FontSize="24" Height="51" Width="154" Click="OnAdd"/>
        <TextBlock x:Name="TxtCount" HorizontalAlignment="Center" Margin="0,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Value}" FontSize="48" Background="#FFEAEA64" TextAlignment="Center" Height="68" Width="306"/>
        <Button x:Name="BtnSub" Content="감소" HorizontalAlignment="Center" Height="46" Margin="0,342,0,0" VerticalAlignment="Top" Width="154" FontSize="24" Click="OnSub"/>

    </Grid>
</Window>
